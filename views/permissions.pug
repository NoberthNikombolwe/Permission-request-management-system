

extends layout

block content


    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        padding: 20px;
      }

      h2 {
        color: #333;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        padding: 20px;
      }

      th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
      }

      th {
        background-color: #4caf50;
        color: white;
      }

      button {
        background-color: red;
        color: white;
        padding: 8px 12px;
        text-decoration: none;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-right: 5px;
      }
      .add-button button{
        background-color: #4caf50;
        border:none;
        padding: 10px 20px;
      }

    h2 All Permissions

    .add-button
      a(href='/api/addpermissions/')
        button Add Permission

    table
      thead
        tr
          th Sender (Student)
          th Permission title 
          th Permission body
          th Receiver (Teacher--modulle)
          th Actions

      tbody
        each permission in permissions
          tr
            td #{permission.student_id}
            td #{permission.title}
            td #{permission.body}
            td #{permission.modulle_id}
            td
              a(href=`/api/permissions/${permission.id}/edit`) Edit
              | 
              form(action=`/api/permissions/${permission.id}/delete`, method='POST')
                button(type='submit') Delete
